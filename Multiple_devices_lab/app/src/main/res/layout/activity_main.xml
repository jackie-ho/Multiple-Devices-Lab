<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.adi.ho.jackie.multiple_devices_lab.MainActivity">

    <Button
        android:id="@+id/card_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to card layout"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/calendar_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to calendar layout"
        android:layout_below="@id/card_button"
        android:layout_margin="20dp"
        android:textColor="#000000"/>
    <Button
        android:id="@+id/recycler_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="go to recycler layout"
        android:layout_below="@id/calendar_button"
        android:layout_margin="30dp"
        android:textColor="#000000"/>
</RelativeLayout>
